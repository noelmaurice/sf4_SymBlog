{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}

    <h1>Inscription</h1>

    {{ form_start(form) }}

    {{ form_row(form.username, {"attr": {"placeholder": "Nom de l'utilisateur"}, "label": "Nom" }) }}
    {{ form_row(form.email, {"attr": {"placeholder": "Mail de l'utilisateur"}, "label": "Mail" }) }}
    {{ form_row(form.password, {"attr": {"placeholder": "Mot de passe de l'utilisateur"}, "label": "Mot de passe" }) }}
    {{ form_row(form.confirm_password, {"attr": {"placeholder": "Mot de passe de l'utilisateur"}, "label": "Confirmation mot de passe" }) }}


    <button type="submit" class="btn btn-success">Inscription</button>

    {{ form_end(form) }}

{% endblock %}
