{% extends 'base.html.twig' %}

{% block title %}Ajouter ou modifier article{% endblock %}

{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}


{% block body %}

    {% if editMode %}
        <h1>Modification d'un article</h1>
    {% else %}
        <h1>Création d'un article</h1>
    {% endif %}



    {{ form_start(formArticle) }}

    {{ form_row(formArticle.title, {"attr": {"placeholder": "Titre de l'article"}, "label": "Titre" }) }}
    {{ form_row(formArticle.category, { "label": "Catégorie" }) }}
    {{ form_row(formArticle.content, {"attr": {"placeholder": "Contenu de l'article"}, "label": "Texte" }) }}
    {{ form_row(formArticle.image, {"attr": {"placeholder": "URL de l'image - Exemple : http://via.placeholder.com/350x150
"}, "label": "Image" }) }}

    <button type="submit" class="btn btn-success">
        {% if editMode %}
            Modifier
        {% else %}
            Ajouter
        {% endif %}
    </button>

    {{ form_end(formArticle) }}





{% endblock %}

